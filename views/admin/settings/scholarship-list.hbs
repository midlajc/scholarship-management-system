<div class="box">
    <h2 class="text-center mb-31">{{scholarship.scholarshipName}}</h2>
    <div>
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Scholarship Name</th>
                    <th>Academic Year</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each scholarshipList}}
                <tr>
                    <td>{{this.scholarshipName}}</td>
                    <td>{{this.academic_year.academicName}}</td>
                    <td>{{this.startDate}}</td>
                    <td>{{this.endDate}}</td>
                    <td><button class="btn w3-red" onclick="deleteMember('{{this._id}}')"><i
                                class="fas fa-trash"></i></button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
    $('#table').DataTable();
});
</script>