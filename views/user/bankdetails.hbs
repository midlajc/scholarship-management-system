<div class="box">
    <h5 class="mt-3">Bank Details</h5>
    <form action="" id="form" class="p-3">
        <div class="row ">
            <div class="col-lg-6 col-xs-12 mb-3">
                <label class="form-label">Account Holder Name</label>
                <input type="text" id="AccountHolderName" placeholder="Enter Account Holder Name"
                    name="accountHolderName" value="{{data.accountHolderName}}" required class="form-control">
            </div>
            <div class="col-lg-6 col-xs-12 mb-3">
                <label class="form-label">Account No</label>
                <input type="password" class="form-control" placeholder="Enter Bank Account No" name="accountNo1"
                    required id="accountNo1" value="{{data.accountNo}}">
            </div>
            <div class="col-lg-4 col-xs-12 mb-3">
                <label class="form-label">Bank Name</label>
                <input type="text" id="bankName" value="{{data.bankName}}" placeholder="Enter Bank Name" name="bankName"
                    required class="form-control">
            </div>
            <div class="col-lg-4 col-xs-12 mb-3">
                <label class="form-label">IFSC Code</label>
                <input type="text" id="ifsc" value="{{data.ifsc}}" placeholder="Enter IFSC Code" name="ifsc" required
                    class="form-control">
            </div>
            <div class="col-lg-4 col-xs-12 mb-3">
                <label class="form-label">Bank Branch</label>
                <input type="text" id="branch" value="{{data.branch}}" placeholder="Enter Bank Branch" name="branch"
                    required class="form-control">
            </div>
        </div>
    </form>
</div>

<script src="/public/js/bankform.js"></script>